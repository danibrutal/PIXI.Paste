{
	"compilerOptions": {
    "target": "es6",
		"outDir": "./dist/",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "allowSyntheticDefaultImports": true,
		"strictNullChecks": false,
		"baseUrl": "./",
		"paths": {
      "@pixi/display": ["node_modules/pixi/display"],
      "@pixi/core": ["node_modules/pixi/core"],
      "@pixi/sprite": ["node_modules/pixi/sprite"],
      "@pixi/text": ["node_modules/pixi/text"],
    }
	},
	"include": ["src/**/*"],
  "exclude": ["node_modules"]
}