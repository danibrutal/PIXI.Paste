{
	"compilerOptions": {
    "target": "es6",
		"outDir": "./dist/",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "allowSyntheticDefaultImports": true,
		"strictNullChecks": false,
		"baseUrl": "./"
	},
	"include": ["src/**/*"],
  "exclude": [
    "node_modules/**/*",
    "dist"
]
}